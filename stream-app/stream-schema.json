{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "STREAM Schema",
  "type": "object",
  "properties": {
    "urls": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "urlId": { "type": "integer" },
          "url": { "type": "string" }
        },
        "required": ["urlId", "url"]
      }
    },
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "message": { "type": "string" },
          "relatedTagIds": {
            "type": "array",
            "items": { "type": "integer" }
          },
          "relatedNodeIds": {
            "type": "array",
            "items": { "type": "integer" }
          },
          "type": { "type": "string", "enum": ["pass", "error", "violation"] }
        },
        "required": ["message", "relatedTagIds", "relatedNodeIds", "type"] 
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "tagId": { "type": "integer" },
          "tag": { "type": "string" }
        },
        "required": ["tagId", "tag"]
      }
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "nodeId": { "type": "integer" },
          "html": { "type": "string" },
          "targets": {
            "type": "array",
            "items": { "type": "string" }
          },
          "relatedUrlId": { "type": "integer" },
          "equalified": { "type": "boolean" } 
        },
        "required": ["nodeId", "html", "relatedUrlId", "equalified"] 
      }
    }
  },
  "required": ["messages", "tags", "nodes", "urls"] 
}